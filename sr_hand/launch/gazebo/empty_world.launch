<launch>

  <!-- start gazebo with an empty plane -->
  <param name="/use_sim_time" value="true" />

  <group if="$(optenv GAZEBO_NO_X 0)">
    <node name="gazebo" pkg="gazebo" type="gazebo" args="-r $(find gazebo_worlds)/worlds/empty.world" respawn="false" output="screen" launch-prefix="gdb -ex run --args">
      <remap from="joint_states" to="gazebo/joint_states"/>
    </node>
  </group>
  <group unless="$(optenv GAZEBO_NO_X 0)">
    <node name="gazebo" pkg="gazebo" type="gazebo" args=" $(find gazebo_worlds)/worlds/empty.world" respawn="false" output="screen">
      <remap from="joint_states" to="gazebo/joint_states"/>
    </node>
  </group>

</launch>
