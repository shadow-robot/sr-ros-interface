<launch>
  <!-- We reuse the logic in empty_world.launch, changing only the name of the world to be launched -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find sr_description)/other/worlds/shadowhand.world"/>
  </include>
  
  <include file="$(find sr_description)/loaders/load_hand_model_robot_description.launch"/>

  <node name="spawn_hand" pkg="gazebo_ros" type="spawn_model" args="-urdf -param robot_description -z 0.01 -model shadow_model" respawn="false" output="screen" />

  <!-- Controllers for the hand -->
  <include file="$(find sr_hand)/launch/gazebo/loaders/hand_controllers.launch"/>

  <node pkg="robot_state_publisher" type="state_publisher"
        name="robot_state_publisher_full_pos">
    <remap from="joint_states" to="gazebo/joint_states" />
    <param name="publish_frequency" type="double" value="20.0" />
  </node>

</launch>
