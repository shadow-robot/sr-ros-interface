<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find sr_description)/hand/xacro/wrist/wrist.transmission.xacro" />
  
  <!-- reflect is either 1 (for right hand) or -1 (for left hand) -->
  <!-- muscletrans is true for muscle transmission or false for motor transmission -->
  <!-- prefix can be anything but usually is "r_" or  "l_" for right and left hands distinction -->
  <!-- parent is the parent joint -->
  <xacro:macro name="wrist" params="muscletrans prefix reflect parent *origin">  
    <link name="${prefix}wrist" >
      <inertial>
		  <origin xyz="0 0 0.029" rpy="0 0 0" />
		  <mass value="0.1" />
		  <inertia  ixx="0.000035" ixy="0.0"  ixz="0.0"  iyy="0.000064"  iyz="0.0" izz="0.0000438" />
      </inertial>
      <visual>
		  <origin xyz="0 0 0" rpy="0 0 0" />
		  <geometry name="${prefix}wrist_visual">
			 <mesh filename="package://sr_description/hand/model/wrist.dae" 
					 scale="${reflect*0.001} 0.001 0.001" />
		  </geometry>
		  <material name="LightGrey" />
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="1.5708 1.5708 0 " />
        <geometry name="${prefix}wrist_collision_geom">
          <cylinder radius="0.0135" length="0.030" />
        </geometry>
      </collision>
      <collision>
        <origin xyz="${reflect*-0.026} 0 0.034" rpy="0 1.5708 0" />
        <geometry>
          <cylinder radius="0.011" length="0.010" />
        </geometry>
      </collision>
      <collision>
        <origin xyz="${reflect*0.031} 0 0.034" rpy="0 1.5708 0" />
        <geometry>
          <cylinder radius="0.011" length="0.010" />
        </geometry>
      </collision>
      <collision>
        <origin xyz="${reflect*-0.021} 0 0.011" rpy="0 ${reflect*0.7854} 0" />
        <geometry>
          <box size="0.027 0.018 0.010" />
        </geometry>
      </collision>
      <collision>
        <origin xyz="${reflect*0.026} 0 0.010" rpy="0 ${reflect*-0.7854} 0" />
        <geometry>
          <box size="0.027 0.018 0.010" />
        </geometry>
      </collision> 
    </link>

    <gazebo reference="${prefix}wrist">
      <material>Gazebo/White</material>
      <selfCollide>false</selfCollide>
    </gazebo>

    <joint name="${prefix}WRJ2" type="revolute">
      <parent link="${parent}"/>
      <child link="${prefix}wrist"/>
      <insert_block name="origin" />
      <axis xyz="0 ${reflect} 0" />
      <limit lower="${-30/180*M_PI}" upper="${10/180*M_PI}" effort="10" velocity="2.0"/>
      <dynamics damping="0.1"/>        
    </joint>
    
    <gazebo reference="${prefix}WRJ2">
      <provideFeedback>1</provideFeedback>
      <implicitSpringDamper>1</implicitSpringDamper>
    </gazebo>
    
    <!-- extensions -->
    <xacro:shadowhand_wrist_transmission muscletrans="${muscletrans}" prefix="${prefix}" />
  
  </xacro:macro>

</robot>
